#include <bits/stdc++.h>
using namespace std;
#define int long long
#define pi (3.141592653589)
#define mod 1000000007
#define int long long
#define float double
#define pb push_back
#define mp make_pair
#define ff first
#define ss second
#define all(c) c.begin(), c.end()
#define min3(a, b, c) min(c, min(a, b))
#define min4(a, b, c, d) min(d, min(c, min(a, b)))
#define rrep(i, n) for(int i=n-1;i>=0;i--)
#define rep(i,n) for(int i=0;i<n;i++)
#define FastHoviBaby ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
 
 
int gcd(int a , int b)
{
if(b==0) return a;
a%=b;
return gcd(b,a);
}
 
 
bool isPrime(int n){
    if(n==1) return false;
    if(n==2) return true;
    for(int i=2;i*i<=n;i++){
        if(n%i==0)return false;
    }
    return true;
}
 
int32_t main(){
FastHoviBaby
 
 
int t=1;
cin>>t;
while(t--){
    int n,m;
    cin>>n>>m;
   
    vector<int>pl;
    int nc=0;
    rep(i,n){
        rep(j,m){
            int a;
            cin>>a;
           pl.pb(a);
           if(a<0) nc++;
        }
    }
 
    sort(all(pl));
    
    int sum=0;
    int sub=0,flag=0;
    if(nc%2!=0){
        if((abs(pl[nc-1])>= pl[nc])){
            pl[nc]=abs(pl[nc-1])-pl[nc];
            pl[nc-1]=0;
 
        }else{
            flag=1;
            sub=2*abs(pl[nc-1]);
        }
    }
    rep(i,pl.size())
    sum+=abs(pl[i]);
 
    if(flag)
    cout<<sum-sub<<endl;
    else
    cout<<sum<<endl;
   
}
return 0;
}

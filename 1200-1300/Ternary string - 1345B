int npow(int a, int b) { 
if(b==0) return 1;   int res= npow(a, b/2);
if(b%2!=0) return res*res*a;       else return res*res; }


int modp(int a,int b,int m){ 
 a %= m;     int res = 1;  while (b > 0) { if (b & 1)    res = res * a % m;      a = a * a % m;  b >>= 1; }
return res;}


bool myComp(const pair<int, int>& a, const pair<int, int>& b){ if (a.first != b.first)  return a.first > b.first;  return a.second < b.second;}


int gcd(int a , int b)
{
if(b==0) return a;
a%=b;
return gcd(b,a);
}


bool isPrime(int n){
    if(n==1) return false;
    if(n==2) return true;
    for(int i=2;i*i<=n;i++){
        if(n%i==0)return false;
    }
    return true;
}
string s;
int n;
bool check(int m){
    
      vector<int> v(4,0);
      rep(i,m-1){
          v[s[i]-'0']++;
      }

      for(int i=m-1;i<n;i++){
          v[s[i]-'0']++;

          if(v[1]>0 && v[3]>0 && v[2]>0) return true;

          v[s[i-m+1]-'0']--;
      }
    return false;
}


int32_t main(){
FastHoviBaby


int t=1;
cin>>t;
while(t--){
    cin>>s;
     n=s.size();
    int l=3, r=n, mi=INT_MAX;
    while(r>=l){
        int m=(l+r)/2;
        if(check(m)){
            mi=min(m,mi);
            r=m-1;
        }
        else 
        l=m+1;
    }

    if(mi!=INT_MAX)
   cout<<mi<<endl;
 else cout<<0<<endl;
}
return 0;
}

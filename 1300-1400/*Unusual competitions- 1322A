     o=0 ,c=0;
      rep(i,n){
          if(s[i]== '(' && c==0){
              st.push('(');
          }else if(s[i]=='(' && c>0){
              c--;
              d++;
          }
          else if(s[i]==')' &&!st.empty() && st.top()=='('){
              st.pop();
          }else{
              c++; 
              d++;
          }
      }  

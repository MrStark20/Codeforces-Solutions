    vector<int> ans;
    ans.pb(0);
    ans.pb(f1);
    ans.pb(f2);
    for(int i=3;i<=12;i++){
        int x= ans[i-1]-ans[i-2];
        ans.pb(x);
    }
    
     int check= ans[((n%6==0)?6: n%6)];

     cout<<(check%mod+ mod)%mod;
return 0;

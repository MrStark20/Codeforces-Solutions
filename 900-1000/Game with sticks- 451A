int gcd(int a , int b)
{
if(b==0) return a;
a%=b;
return gcd(b,a);
}


bool isPrime(int n){
    if(n==1) return false;
    if(n==2) return true;
    for(int i=2;i*i<=n;i++){
        if(n%i==0)return false;
    }
    return true;
}

int32_t main(){
fast

int n,m;
cin>>n>>m;
int count=0;
while((n*m)>=1){
     count++;
    if(m==1 && n!=1){
        n--;
        break;
    }
    else if(n==1 && m!=1){
    m--;
    break;
    }
    else{
        m--;
        n--;
    }
   
}
if(count%2==0)
cout<<"Malvika";
else
cout<<"Akshat";
return 0;
}

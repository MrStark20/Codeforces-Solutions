int gcd(int a , int b)
{
if(b==0) return a;
a%=b;
return gcd(b,a);
}


bool isPrime(int n){
    if(n==1) return false;
    if(n==2) return true;
    for(int i=2;i*i<=n;i++){
        if(n%i==0)return false;
    }
    return true;
}

int32_t main(){
FastHoviBaby


int e=1;
cin>>e;
while(e--){
    int n,x,t;
    cin>>n>>x>>t;
    int p=t/x;
    if(p>=n){
        cout<< ((n-1)*(n))/2<<endl;
    }else{
        int y= ((n-p-1)*p) + ((p*(p+1))/2);
        cout<<y<<endl;
    }
}
return 0;
}

FastHoviBaby

int n, l, r;
cin>>n>>l>>r;

int r0= r/3 - (l-1)/3;
int r1= (r+2)/3 - (l+1)/3;
int r2= (r+1)/3- l/3;

vector<vector<int>> dp(1e6+1, vector<int>(3, 0));
dp[1][0]=r0;
dp[1][1]= r1;
dp[1][2]= r2;

    for(int i=2; i<=n;i++){
        rep(k,3){
            rep(j, 3){
                (dp[i][(k+j)%3] += (dp[i-1][k]%mod) * (dp[1][j] %mod)) %=mod;
            }
        }
    }

    cout<<dp[n][0];

return 0;
}

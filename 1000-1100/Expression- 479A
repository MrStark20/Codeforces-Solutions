int gcd(int a , int b)
{
if(b==0) return a;
a%=b;
return gcd(b,a);
}


bool isPrime(int n){
    if(n==1) return false;
    if(n==2) return true;
    for(int i=2;i*i<=n;i++){
        if(n%i==0)return false;
    }
    return true;
}

int32_t main(){
fast

int a,b,c;
cin>>a>>b>>c;
int ma= (a+b)*c;
int mp= (a*b)+c;
int mc= a+(b*c);
int mk= a*(b+c);
int mm=a*b*c;
int md= a+b+c;


cout<< max(ma, max(mm, max(mp, max(md, max(mc, mk)) ) ));
return 0;
}

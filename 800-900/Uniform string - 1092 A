#include<bits/stdc++.h>
using namespace std ;
 
int main()
{
    int t;
    cin >> t;
    while(t--)  {
        int n, k;
        cin >> n >> k;
        int x = n/k;
        int y = n % k;
        for(int i = 0; i < k; i++)  {
            for(int j = 0; j < x; j++)
            cout << (char)('a' + i);
        
        }
        for(int i = 0; i < y; i++)  {
            cout << (char)('a' + k - 1);
        }
        cout << "\n";
    }
    return 0;
}
